@model TCCCMS.Models.ApproverMaster
@{
    ViewBag.Title = "Index";
}


<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/ApproverSign.js"></script>

@Html.Hidden("SaveApproverSign", @Url.Action("SaveApproverSign", "ApproverSign"))


    <div class="row">
        <div class="col-md-2">
        </div>

        <div class="col-sm-8 col-xs-10  ">
            <div class="row">
                @*<form>*@
                @*<div class="form-group">
                    <input type="hidden" id="ID" />
                </div>*@
                <div class="row">
                    <div class="card">
                        <div class="card-header" style="background-color: #e90000;">
                            <h4 class="modal-title colorWhite">Add Approver Sign</h4>
                        </div>
                        <div class="card-body">
                            <div class="col-sm-12 col-xs-12">
                                <div class="row">
                                    <div class="col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <label for="ApproverUser">ApproverUser</label>
                                            @Html.DropDownListFor(model => model.UserId, (IEnumerable<SelectListItem>)ViewBag.Users, "Select", new { @class = "form-control", @id = "ApproverUserId" })
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <label for="Name">Name</label>
                                            <input type="text" class="form-control" id="Name" placeholder="Name" />
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-xs-12">
                                        <div class="form-group">
                                            <label for="Position">Position</label>
                                            <input type="text" class="form-control" id="Position" placeholder="Position" />
                                        </div>
                                    </div>
                                    <div>
                                        <div class="form-group col-sm-12 col-xs-12">
                                            <label for="SignImagePath">Upload Sign Image</label>
                                            <input type="file" id="SignImagePath" multiple size="1" />
                                            @*<input type="text" class="form-control" id="SignImagePath" placeholder="SignImagePath" />*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="button" class="btn btn-info btn-sm" style="background-color: #e90000; width:138px;" onclick="SaveSign()">Add</button>
                        </div>
                    </div>
                </div>
                @*</form>*@

            </div>

        </div>
    </div>




