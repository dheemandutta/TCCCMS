@model TCCCMS.Models.DownloadableFroms

@{
    ViewBag.Title = "AdministrationAndMmgt";
}

<link href="~/DataTables/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/DataTables/datatables.min.js"></script>

<script src="~/Scripts/DownloadableFroms.js"></script>
<script src="~/js/UserMaster/UserUploadForm.js"></script>
<style>
    table.dataTable.no-footer {
        width: 100% !important;
    }
</style>

@Html.Hidden("loaddata", @Url.Action("LoadData", "Forms"))
@Html.Hidden("urlFilledUpForm", @Url.Action("UploadFilledUpForm", "UserMaster"))


<body>
    @*<h2 class="ta">Downloadable Forms</h2>*@
    <div class="page_padding">
        <div class="">
            <h2 class="ta_title">Administration And Management</h2>
            <div style="margin:0 auto" class="tablecontainer">
                @*<p align="right">
                        <a href="~/RevisionHistory/Index"> Revision History </a>
                    </p>*@
                <input type="hidden" id="hdnrole" />
                <table id="DownloadableFromsTable" class="display" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Form Name</th>
                            <th>Forms Download</th>
                            <th>Forms Upload</th>
                            <th>Version</th>
                            @*<th>Edit</th>
                                <th>Delete</th>*@
                        </tr>
                    </thead>
                </table>
            </div>

        </div>
    </div>

    <div class="footer">
        <ul>
            <li><strong>Uncontrolled when printed</strong></li>
            <li>Revision 0.0</li>
            <li>01-May -21</li>
            <li><a href="#">View Revision Histroy</a></li>

        </ul>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="filledUpFormModal" role="dialog">
        <div class="modal-dialog ">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header" style="background-color: #e90000;">
                    <h4 class="modal-title colorWhite">Upload Filledup Form</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>


                <div class="modal-body">
                    @*<form>*@
                    <div class="form-group">
                        <input type="hidden" id="hdnFilledUpFormID" />
                    </div>
                    <div class="row">
                        <div class="col-sm-12 col-xs-12">
                            <div class="card">
                                <div class="">
                                    <div class="col-sm-12 col-xs-12 marginTP10">
                                        <div class="row">

                                            <div class="col-sm-12 col-xs-12">
                                                <div class="form-group">
                                                    <input type="file" id="fileUpload" />
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    @*</form>*@

                </div>


                <div class="modal-footer" style="background-color:lightgray;">
                    <button type="button" class="btn btn-info btn-sm" style="background-color: #e90000; width:138px;" id="btnAdd" onclick="return UploadFilledUpFormNew();">Upload</button>
                    <button type="button" class="btn btn-info btn-sm" style="background-color: #e90000;" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
</body>

<script>
    $(document).ready(function () {
        //$('#example').DataTable();
        SetUpGrid('9');
    });
</script>