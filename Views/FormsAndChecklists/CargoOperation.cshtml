<script src="~/DataTables/datatables.min.js"></script>

<script src="~/Scripts/DownloadableFroms.js"></script>
<script src="~/js/UserMaster/UserUploadForm.js"></script>
<style>
    table.dataTable.no-footer {
        width: 100% !important;
    }
</style>
@Html.Hidden("loaddata", @Url.Action("LoadData", "Forms"))
@Html.Hidden("urlFilledUpForm", @Url.Action("UploadFilledUpForm", "Forms"))

<body>
    @*<h2 class="ta">Downloadable Forms</h2>*@
    <div class="page_padding">
        <div class="">
            <div class="">
                <div class="">
                    <div class="ta_titlecargo">
                        <h2 class="">Cargo Operation</h2>
                        @*<a href="@Url.Action("CO031", "FormsAndChecklists")">CO031 - FORMS</a>*@
                        <a type="button" class="btn btn-info btn-sm" style="background-color: #e90000; width:130px;" href='@Url.Action("FillupFormList", "Forms", new { @qr =0})'><span>Waiting Approval </span></a>
                        <a type="button" class="btn btn-info btn-sm" style="background-color: #6AA84F; width: 130px;" href='@Url.Action("FillupFormList", "Forms" ,new { @qr =1})'><span>Approved </span></a>
                        <div>&nbsp;</div>
                    </div>
                    <div style="margin:0 auto" class="tablecontainer">
                        @*<p align="right">
                                <a href="~/RevisionHistory/Index"> Revision History </a>
                            </p>*@
