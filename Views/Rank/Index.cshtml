@model TCCCMS.Models.RankPOCO

@{
    ViewBag.Title = "Index";
}

<link href="~/DataTables/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/DataTables/datatables.min.js"></script>

<script src="~/Scripts/Rank.js"></script>

@Html.Hidden("loaddata", @Url.Action("LoadData", "Rank"))
@Html.Hidden("SaveUpdateRank", @Url.Action("SaveUpdateRank", "Rank"))

@Html.Hidden("DeleteRank", @Url.Action("DeleteRank", "Rank"))
@Html.Hidden("GetRankByRankId", @Url.Action("GetRankByRankId", "Rank"))

<body>
    <div class="row">
        <div class="col-md-3">
            <h2 class="ta">Rank </h2>
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-8 bac1">

                    <div style="margin:0 auto" class="tablecontainer">
                        <button type="button" class="btn btn-info btn-sm" style="background-color: #e90000;" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add Rank</button><br /><br />
                        <input type="hidden" id="hdnrole" />
                        <table id="RankTable" class="display" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Rank Name</th>
                                    <th>Email</th>
                                    <th>Description</th>

                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="myModal" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header" style="background-color: #e90000;">
                                    <h4 class="modal-title">Add Rank</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>

                                <div class="form-group">
                                    <input type="hidden" id="RankId" />
                                </div>

                                <div class="modal-body">

                                    <div class="form-group">
                                        <label for="RankName">Rank Name</label>
                                        <input type="text" class="form-control" id="RankName" placeholder="Rank Name" />
                                    </div>
                                    <div class="form-group">
                                        <label for="Email">Email</label>
                                        <input type="email" class="form-control" id="Email" placeholder="Email" onblur="return CheckEmail(this.value)" />
                                    </div>
                                    <div class="form-group">
                                        <label for="Description">Description</label>
                                        @*<input type="text" class="form-control" id="Description" placeholder="Description" />*@
                                        <textarea type="text" class="form-control" id="Description" placeholder="Description"></textarea>
                                    </div>

                                </div>


                                <div class="modal-footer" style="background-color:lightgray;">
                                    <button type="button" class="btn btn-info btn-sm" style="background-color: #e90000; width:138px;" id="btnAdd" onclick="return SaveUpdateRank();">Add</button>
                                    <button type="button" class="btn btn-info btn-sm" id="btnUpdate" style="background-color: #e90000; display: none; width: 86px;" onclick="SaveUpdateRank();">Update</button>
                                    <button type="button" class="btn btn-info btn-sm" style="background-color: #e90000;" data-dismiss="modal">Close</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    $(document).ready(function () {
        //$('#example').DataTable();
        SetUpGrid();
    });
</script>
