@model TCCCMS.Models.ShipManual
@{
    //ViewBag.Title = "Pages";
    ViewBag.Title = Model.BodyHeader;
    Layout = "~/Views/Shared/_Ship_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
@section Styles{
    <link href="~/Scripts/highlight/css/default.css" rel="stylesheet" />
    <link href="~/css/TccAccordian.css" rel="stylesheet" />
    <style type="text/css">

        .highlight {
            background: #b6ff00;
            padding: 1px;
            border: #00CC00 dotted 1px;
        }
    </style>
}


<div id="BodyHtml" class="searchdContent">
    @Html.Raw(Model.BodyHtml)

</div>
@Html.Partial("_pvFormPreviewModal")
@*-----Below line for Linked Form Preview-----Added on 15th May 2021 --by BB- -*@
@Html.Partial("_pvFormPreviewModalVol8")

@section Scripts{

    <script src="~/js/Manual/ManualSearch.js"></script>
    <script src="~/Scripts/DownloadableFroms.js"></script>

    <script type="text/javascript">
        var acc = document.getElementsByClassName("accordion");
        var i;

        for (i = 0; i < acc.length; i++) {
            acc[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var panel = this.nextElementSibling;
                if (panel.style.display === "block") {
                    panel.style.display = "none";
                } else {
                    panel.style.display = "block";
                }
            });
        }
    </script>

}


