@model TCCCMS.Models.GroupUser
@{
    ViewBag.Title = "GroupUser";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/notify.min.js"></script>
<link href="~/Content/notify.css" rel="stylesheet" />
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />

<link href="~/Content/toastr.min.css" rel="stylesheet" />
<script src="~/Scripts/toastr.js"></script>

<script src="~/Scripts/RoleGroup.js"></script>

@Html.Hidden("SaveUserGroupMapping", @Url.Action("SaveUserGroupMapping", "RoleGroup"))
@Html.Hidden("GetRoleByGroupId", @Url.Action("GetRoleByGroupId", "RoleGroup"))

<body>
    <div class="row">
        <div class="col-md-3">
            <h3 class="ta">Associate Group User </h3>
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-8 bac1">

                    <div class="form-group">
                        <input type="hidden" id="GroupUserId" />
                    </div>

                    <div class="modal-body">

                        <div class="form-group">
                            <label for="Role">Group</label>
                            @Html.DropDownListFor(model => model.GroupId, (IEnumerable<SelectListItem>)ViewBag.Groups, "Select", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="Role" id="RoleName"></label>
                        </div>
                        <div class="form-group">
                            <label for="User">User</label>
                                @Html.DropDownListFor(model => model.UserId, (IEnumerable<SelectListItem>)ViewBag.Users, "Select", new { @class = "form-control" })
                            </div>
                    </div>


                    <div class="modal-footer" @*style="background-color:lightgray;"*@>
                        <button type="button" class="btn btn-info btn-sm" style="background-color: #e90000; width:138px;" id="btnAdd" onclick="return SaveUserGroupMapping();">Add</button>
                    </div>
                    @*</div>*@

                    @*</div>*@
                    @*</div>*@
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    $(document).ready(function () {


        $("#GroupId").change(function () {
            GetRoleByGroupId($("#GroupId").val());
        });

    });


</script>

