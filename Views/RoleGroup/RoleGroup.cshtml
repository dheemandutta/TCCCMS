@model TCCCMS.Models.RoleGroup
@{
    ViewBag.Title = "RoleGroup";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/Scripts/notify.min.js"></script>
<link href="~/Content/notify.css" rel="stylesheet" />
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />

<link href="~/Content/toastr.min.css" rel="stylesheet" />
<script src="~/Scripts/toastr.js"></script>

<script src="~/Scripts/RoleGroup.js"></script>

@Html.Hidden("SaveRoleGroup", @Url.Action("SaveRoleGroup", "RoleGroup"))

<body>
    <div class="row">
        <div class="col-md-3">
            <h2 class="ta">Associate Role Group </h2>
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-8 bac1">

                    <div class="form-group">
                        <input type="hidden" id="RoleGroupId" />
                    </div>

                    <div class="modal-body">

                        <div class="form-group">
                            <label for="Role">Role</label>
                            @Html.DropDownListFor(model => model.RoleId, (IEnumerable<SelectListItem>)ViewBag.Roles, "Select", new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="Group">Group</label>
                            @Html.DropDownListFor(model => model.GroupId, (IEnumerable<SelectListItem>)ViewBag.Groups, "Select", new { @class = "form-control" })
                        </div>
                    </div>


                    <div class="modal-footer" @*style="background-color:lightgray;"*@>             
                        <button type="button" class="btn btn-info btn-sm" style="background-color: #e90000; width:138px;" id="btnAdd" onclick="return SaveRoleGroup();">Add</button>
                    </div>
                    @*</div>*@

                    @*</div>*@
                    @*</div>*@
                </div>
            </div>
        </div>
    </div>
</body>

