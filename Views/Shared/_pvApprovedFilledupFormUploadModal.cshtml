<!-- Modal -->

@Html.Hidden("urlApprovedFormsUpload", @Url.Action("UploadApprovedFilledUpForm", "Forms"))
<div class="modal fade" id="approvedFilledUpFormModal" role="dialog">
    <div class="modal-dialog modal-lg ">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background-color: #e90000;">
                <h4 class="modal-title colorWhite">Upload Approved Filledup Form</h4>
                <button type="button" class="close" data-dismiss="modal" onclick="ClearApprovedFormInfo();">&times;</button>
            </div>


            <div class="modal-body">
                @*<form>*@
                <div class="form-group">
                    <input type="hidden" id="hdnAFilledUpFormID" />
                    <input type="hidden" id="hdnAApproverUserID" value="" />
                    <input type="hidden" id="hdnAOriginalFormName" value="" />
                    <input type="hidden" id="hdnAFormsCategory" value="" />
                </div>
                <div class="row">
                    <div class="col-sm-12 col-xs-12">
                        <div class="card">
                            <div class="">
                                <div class="col-sm-12 col-xs-12 marginTP10">
                                    <div class="row">

                                        <div class="col-sm-12 col-xs-12">
                                            <div class="form-group">
                                                <input type="file" id="aFileUpload" maxlength="1" />
                                            </div>
                                        </div>

                                    </div>
                                </div>



                            </div>
                        </div>
                    </div>

                </div>
                @*</form>*@

            </div>


            <div class="modal-footer" style="background-color:lightgray;">
                <button type="button" class="btn btn-info btn-sm" style="background-color: #e90000; width:138px;" id="btnAdd" onclick="return UploadApprovedFilledUpForm();">Upload</button>
                <button type="button" class="btn btn-info btn-sm" style="background-color: #e90000;" data-dismiss="modal" onclick="ClearApprovedFormInfo();">Close</button>
            </div>
        </div>

    </div>
</div>

