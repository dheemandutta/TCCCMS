@model TCCCMS.Models.RoleMasterPOCO

@{
    ViewBag.Title = "Index";
}

<link href="~/DataTables/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/DataTables/datatables.min.js"></script>

<script src="~/Scripts/RoleMaster.js"></script>

@Html.Hidden("loaddata", @Url.Action("LoadData", "RoleMaster"))
@Html.Hidden("SaveUpdateRoleMaster", @Url.Action("SaveUpdateRoleMaster", "RoleMaster"))

@Html.Hidden("DeleteRoleMaster", @Url.Action("DeleteRoleMaster", "RoleMaster"))
@Html.Hidden("GetRoleMasterByRoleId", @Url.Action("GetRoleMasterByRoleId", "RoleMaster"))

<body>
    <div class="row">
        <div class="col-md-3">
            <h2 class="ta">Role Master </h2>
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-8 bac1">

                    <div style="margin:0 auto" class="tablecontainer">
                        <button type="button" class="btn btn-info btn-sm" style="background-color: #e90000;" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add Role </button><br /><br />
                        <input type="hidden" id="hdnrole" />
                        <table id="RoleMasterTable" class="display" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Role Name</th>
                                    @*<th>Created By</th>
                                        <th>Modified By</th>*@

                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                        </table>
                    </div>

                    <!-- Modal -->
                    <div class="modal fade" id="myModal" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header" style="background-color: #e90000;">
                                    <h4 class="modal-title">Add User</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>

                                <div class="form-group">
                                    <input type="hidden" id="RoleId" />
                                </div>

                                <div class="modal-body">

                                    <div class="form-group">
                                        <label for="RoleName">Role Name</label>
                                        <input type="text" class="form-control" id="RoleName" placeholder="Role Name" />
                                    </div>

                                    @*<div class="form-group">
                                            <label for="CreatedBy">Created By</label>
                                            <input type="text" class="form-control" id="CreatedBy" placeholder="Created By" />
                                        </div>
                                        <div class="form-group">
                                            <label for="ModifiedBy">Modified By</label>
                                            <input type="text" class="form-control" id="Modified By" placeholder="ModifiedBy" />
                                        </div>*@

                                </div>


                                <div class="modal-footer" style="background-color:lightgray;">
                                    <button type="button" class="btn btn-info btn-sm" style="background-color: #e90000; width:138px;" id="btnAdd" onclick="return SaveUpdateRoleMaster();">Add</button>
                                    <button type="button" class="btn btn-info btn-sm" id="btnUpdate" style="background-color: #e90000; display: none; width: 86px;" onclick="SaveUpdateRoleMaster();">Update</button>
                                    <button type="button" class="btn btn-info btn-sm" style="background-color: #e90000;" data-dismiss="modal">Close</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    $(document).ready(function () {
        //$('#example').DataTable();
        SetUpGrid();
    });
</script>
