
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
@section Styles{
    <link href="~/Scripts/highlight/css/default.css" rel="stylesheet" />
    @*<link href="~/DataTables/datatables.min.css" rel="stylesheet" />*@

}

@Html.Hidden("loaddata", @Url.Action("LoadData", "Import"))
@Html.Hidden("urlSaveDetails", @Url.Action("SaveApprover", "Import"))
@Html.Hidden("urlSaveDetails2", @Url.Action("SaveApproverList", "Import"))
@Html.Hidden("urlGetIMOByShip", @Url.Action("GetIMONumberByShip", "Import"))
@Html.Hidden("urlGetUserByShip", @Url.Action("GetAllUserByShipForDropDown", "Import"))
@Html.Hidden("urlGeRankByUser", @Url.Action("GetUserDetailsByUser", "Import"))
@Html.Hidden("urlDeleteApprover", @Url.Action("DeleteApprover", "Import"))

<link href="~/DataTables/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/DataTables/datatables.min.js"></script>
<div class="row">
    <div class="col-sm-3 col-xs-12">
        <h2 class="ta">Import</h2>
    </div>
    <div class="col-sm-9 col-xs-12">
        <div class="row">

            <div class="modal-content">

                <div class="modal-header" style="background-color: #e90000;">
                    <h4 class="modal-title colorWhite">Import Excel</h4>
                </div>

                <div class="modal-body">

                    @*<div class="form-group">
                        <input type="hidden" id="ID" />
                    </div>*@

                    <div class="row">
                        <div class="col-sm-12 col-xs-12">
                            <div class="card">
                                <div class="">
                                    <div class="col-sm-12 col-xs-12 marginTP10">
                                        <div class="row">

                                            <div class="col-sm-6 col-xs-12">
                                                <div class="form-group">
                                                    <div>
                                                        @using (Html.BeginForm("Index", "Import", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                                        {
                                                            <span style="font-size:20px;">Select File:</span>
                                                            <br />
                                                            <input type="file" name="postedFile" />
                                                            <hr />
                                                            @*<br />*@
                                                            <input type="submit" value="Upload" class="btn-outline-danger" />
                                                            <br /><br />
                                                            <span style="color:green">@ViewBag.Message</span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-sm-6 col-xs-12">
                                                <div class="form-group">
                                                    <div class="box">
                                                        <img src="~/background/excel.png" class="img-responsive" style="height:35%; width:36%;" />
                                                    </div>
                                                    <div class="export-template-label" style="display:inline-block;margin:4px 5px -8px 0px;">
                                                        @*<a href="../../Import/IMOcrewlistForm5.xlsx" target="_self" download>
                                                            <input type="button" alt="Download Excel" style="float:left; height:100%; width:100%;" class="btn-outline-danger">
                                                        </a>*@
                                                        <a href="../../Import/IMOcrewlistForm5.xlsx" style="display: block; width: 143px; height: 44px; background: #007234;
                                                                                                            padding: 10px; text-align: center; border-radius: 5px; color: white;
                                                                                                            font-weight: bold; line-height: 25px;">
                                                                  Download Excel
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-sm-6 col-xs-12">
                                                <div class="form-group">
                                                    <div>
                                                        <p style="color:blue; font-size:15px;">Important Instructions</p>
                                                        <p style="color:blue; font-size:12px;">* Data will not be inserted if there is no name</p>
                                                        <p style="color:blue; font-size:12px;">* Default password is 1234 for all users during bulk entry</p>
                                                        @*<p style="color:blue; font-size:12px;">* If Rank,Country data does not match with any existing data in the system An new Rank and Country will be inserted</p>*@
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="modal-footer" style="background-color:lightgray; height:70px;">
                    @*<button type="button" class="btn btn-info btn-sm" style="background-color: #e90000; width:138px;" id="btnAdd" onclick="return SaveApprover();">Add</button>
        <button type="button" class="btn btn-info btn-sm" style="background-color: #e90000;" data-dismiss="modal">Close</button>*@
                </div>

            </div>
        </div>
    </div>
</div>


@section Scripts{

    <script src="~/js/Approver/Approver.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {


        });
    </script>

}