
@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-2">
    </div>

    <div class="col-sm-8 col-xs-10  ">
        <div class="row">
            @*<form>*@
            <div class="form-group">
                <input type="hidden" id="ID" />
            </div>
            <div class="row">
                <div class="card">
                    <div class="card-header" style="background-color: #e90000;">
                        <h4 class="modal-title colorWhite">Raise Ticket</h4>
                    </div>
                    <div class="card-body">
                        <div class="col-sm-12 col-xs-12">
                            <div class="row">
                                <div class="col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label for="Error">Error</label>
                                        <input type="text" class="form-control" id="txtError" placeholder="Error" style="max-width:100% !important;"/>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-xs-12">
                                    <div class="form-group">
                                        <label for="Description">Description</label>
                                        @*<input type="text" class="form-control" id="txtDescription" placeholder="Description" multiple />*@
                                        <textarea class="form-control" rows="5" id="txtDescription" cols="50" style="max-width:100% !important;"></textarea>
                                    </div>
                                </div>
                                <div>

                                    <div class="form-group col-sm-12 col-xs-12">
                                        <label for="UploadImage">Upload Image</label>
                                        <input type="file" id="fileUpload" multiple size="1" />
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="button" class="btn btn-info btn-sm" style="background-color: #e90000; width:138px;" id="btnAdd" onclick="return UploadFilesAndSendTicket();">Create Ticket</button>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <a href="@Url.Action("ViewSupportTicket", "Ticket")">View Tickets</a>
                    </div>
                </div>
            </div>
            @*</form>*@

        </div>

    </div>
</div>

