@model TCCCMS.Models.UserMasterPOCO

@{
    ViewBag.Title = "Index";
}

<link href="~/DataTables/datatables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<script src="~/DataTables/datatables.min.js"></script>

<script src="~/Scripts/UserMaster.js"></script>

@Html.Hidden("loaddata", @Url.Action("LoadData", "UserMaster"))

<body>
    <div class="row">
        <div class="col-md-4">
            <h2 class="ta" style="font-size: 29px;">User Master </h2>
        </div>
        <div class="col-md-8">
            <div class="row" style="margin-left: -150px;">
                <div class="col-md-8 bac1" style="height: 515px;">
                    <div class="card">
                        <div style="margin:0 auto" class="tablecontainer">
                            <button type="button" class="button1" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add User</button><br /><br />
                            <input type="hidden" id="hdnrole" />
                            <table id="UserMasterTable" class="display" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Equipment Name</th>
                                        <th>Quantity</th>
                                        <th>Comment</th>
                                        <th>Expiry Date</th>
                                        <th>Location</th>
                                        <th>Edit</th>
                                        <th>Delete</th>
                                        <th>Delete</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>

                  

                    <!-- Modal -->
                    <div class="modal fade" id="myModal" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header" style="background-color: #e90000;">
                                    <h4 class="modal-title">Add User</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>

                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="Rank">Rank</label>
                                        @Html.DropDownListFor(model => model.RankId, (IEnumerable<SelectListItem>)ViewBag.Ranks, "Select", new { @class = "form-control" })
                                    </div>
                                    <div class="form-group">
                                        <label for="EquipmentsName">Equipments Name</label>
                                        <input type="text" class="form-control" id="EquipmentsName" placeholder="Equipments Name" />
                                    </div>
                                </div>

                                <div class="modal-footer" style="background-color:lightgray;">
                                    <button type="button" class="button1" id="btnAdd" onclick="return SaveUpdateUser();" style="width:138px;">Add</button>
                                    <button type="button" class="buttonpop" id="btnUpdate" style="display:none; width:86px;" onclick="SaveEquipments();">Update</button>
                                    @*<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>*@
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>



<script>
    $(document).ready(function () {
        //$('#example').DataTable();
        SetUpGrid();
    });
</script>
